<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="right|center_vertical"
    android:background="@color/main_bg"
    android:alignmentMode="alignMargins"
    android:columnCount="3"
    android:rowCount="3">



        <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="@string/intro_desc"
            android:layout_columnSpan="3"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center_vertical|left" />

    <Button
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:text="Bus"
            android:id="@+id/busButton" android:layout_gravity="left|top"
        android:background="@color/button_bg"
        android:clickable="true"
        android:focusableInTouchMode="false"
        android:layout_column="0"
        android:layout_row="1"
        android:singleLine="true"
        android:onClick="findBusRoutes" />

    <Button
            android:layout_width="95dp"
            android:layout_height="46dp"
            android:text="Train"
            android:id="@+id/trainsButton" android:layout_gravity="center_vertical|left|top" android:singleLine="false"
        android:background="@color/button_bg"
        android:clickable="false"
        android:layout_column="0"
        android:layout_row="2" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_gravity="left"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:text="@string/route_wait_message"
            android:id="@+id/loadingRoutesMessage" />

        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/busRouteList"
                android:layout_gravity="center|left|top"
                android:layout_row="1"
            android:layout_column="2"
            android:visibility="invisible" />

    </LinearLayout>

</GridLayout>


